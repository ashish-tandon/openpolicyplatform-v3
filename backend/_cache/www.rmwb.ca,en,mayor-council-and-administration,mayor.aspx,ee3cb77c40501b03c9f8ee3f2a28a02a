    }
    else {
        if (iCreateObject.isSiteInICreateMode && !iCreateObject.isSiteInPreviewMode) {
            _element.removeClass('hasImage');
            imgsrc = '/en/images/structure/logo-text.svg';
            var title = _title;
            var url = '/en/index.aspx';
            var target = "_self";
